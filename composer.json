{
    "name": "aulasoftwarelibre/iam",
    "description": "Identity and access management",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "api-platform/api-pack": "^1.1",
        "aulasoftwarelibre/ddd-base": "0.4.*",
        "doctrine/collections": "^1.5",
        "guzzlehttp/psr7": "^1.4",
        "php-http/curl-client": "^1.7",
        "php-http/discovery": "^1.4",
        "php-http/message": "^1.6",
        "prooph/event-sourcing": "^5.5",
        "prooph/event-store-bus-bridge": "^3.2",
        "prooph/event-store-symfony-bundle": "^0.5.0",
        "prooph/pdo-event-store": "^1.8",
        "prooph/service-bus-symfony-bundle": "^0.7.0",
        "ramsey/uuid": "^3.7",
        "react/promise": "^2.7",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "*",
        "symfony/orm-pack": "^1.0",
        "symfony/psr-http-message-bridge": "^1.0",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "aulasoftwarelibre/ddd-test": "^1.2",
        "friends-of-behat/symfony-extension": "^2.0.8",
        "friends-of-behat/variadic-extension": "^1.1",
        "friendsofphp/php-cs-fixer": "^2.12",
        "phpspec/phpspec": "^5.1.0",
        "prolic/fpp": "dev-master",
        "prooph/standard-projections": "^1.1",
        "roave/security-advisories": "dev-master",
        "symfony/debug-pack": "^1.0",
        "symfony/web-server-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AulaSoftwareLibre\\Iam\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "generate": [
            "vendor/bin/fpp model/",
            "vendor/bin/php-cs-fixer fix"
        ],
        "fix": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpspec run",
            "vendor/bin/behat"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.2.*"
        }
    }
}
